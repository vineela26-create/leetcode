class Solution {
    public int findSmallestInteger(int[] nums, int value) {
        int[] bucket = new int[value];
      for(int i = 0; i < nums.length; i++){
        int r = ((nums[i] % value) + value) % value;
        bucket[r]++;
     }
     int mex = 0;
      while(bucket[mex % value] > 0){
          bucket[mex % value]--;
           mex++;
       }
      return mex;


    }
}
