class Solution {
    public boolean checkDivisibility(int n) {
        int temp=n;
        int sum=0;
        int prod=1;
        while(temp>0) {
            int digit=temp%10;
            sum=sum+digit;
            prod=prod*digit;
            temp=temp/10;
        }
        int add=sum+prod;
        if(n%add==0) {
            return true;
        }
        else {
          return false;  
        }
    }
}
